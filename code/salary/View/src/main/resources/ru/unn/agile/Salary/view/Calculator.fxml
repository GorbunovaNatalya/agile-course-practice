<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ru.unn.agile.Salary.viewModel.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.unn.agile.Salary.view.Calculator">
    <fx:define>
        <ViewModel fx:id="viewModel" />
    </fx:define>
    <children>
        <VBox alignment="TOP_CENTER" layoutX="6.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox>
                    <children>
                        <Separator prefWidth="28.0" visible="false" />
                        <Label minWidth="-Infinity" text="Pay (hour) ">
                        </Label>
                        <TextField fx:id="txtPay" />
                        <Separator prefWidth="168.0" visible="false" />
                        <Label minWidth="-Infinity" text="Worked hours " />
                        <TextField fx:id="txtWorked" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label minWidth="-Infinity" text="Overtime hours " />
                        <TextField fx:id="txtOver" />
                        <Separator prefWidth="135.0" visible="false" />
                        <Label minWidth="-Infinity" text="Administrative leave " />
                        <TextField fx:id="txtAdmin" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Separator prefWidth="450.0" visible="false" />
                        <Button fx:id="btnCalc" defaultButton="true" disable="${viewModel.calculationDisabled}"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Calculate" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label text="Result: " />
                        <Label fx:id="lbResult" text="${viewModel.result}" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                        <Separator prefWidth="200.0" visible="false" />
                        <Label text="Status: " />
                        <Label fx:id="lbStatus" text="${viewModel.status}" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
